{
  "name": "wg-local-control",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:client\"",
    "dev:sudo": "sudo env PATH=\"$PATH\" npm run dev",
    "dev:server": "nodemon --watch server server/index.js",
    "dev:client": "vite",
    "build": "vite build",
    "start": "NODE_ENV=production node server/index.js",
    "preview": "npm run build && npm run start"
  },
  "dependencies": {
    "authenticate-pam": "^1.0.5",
    "better-sqlite3": "^12.6.2",
    "better-sqlite3-session-store": "^0.1.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "helmet": "^8.1.0",
    "ldapts": "^8.1.6",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-vue": "^6.0.4",
    "autoprefixer": "^10.4.24",
    "axios": "^1.13.5",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "pinia": "^3.0.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "vue": "^3.5.28",
    "vue-router": "^5.0.2"
  }
}
